{
   "manifest_version": 2,
   "name":"TabsClose",
   "version":"2.0",
   "description":"清理用户指定可清理的标签",
   "author":"zhuangjie",
   "icons": {
      "16":"img/icon.png",
      "48":"img/icon.png",
      "128":"img/icon.png"
   },
   "browser_action":{
      "default_icon":"img/icon.png",
      "default_title":"清理用户指定可清理的标签",
      "default_popup":"main.html"
   },
   "permissions": [
      "management",
      "unlimitedStorage",
      "system.cpu",
      "webRequestBlocking",
      "tabs",
      "<all_urls>",
      "storage"
    ],
    "background": {
      "scripts": ["js/background.js"], 
      "persistent": false
     
    }
}